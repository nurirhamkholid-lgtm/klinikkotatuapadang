    <script>
        // Menambahkan efek interaktif pada baris tabel
        document.addEventListener('DOMContentLoaded', function() {
            const tableRows = document.querySelectorAll('table tbody tr');
            
            tableRows.forEach(row => {
                row.addEventListener('click', function() {
                    // Hapus highlight dari semua baris
                    tableRows.forEach(r => r.style.backgroundColor = '');
                    
                    // Highlight baris yang diklik
                    if(this.style.backgroundColor === 'rgb(232, 244, 254)') {
                        this.style.backgroundColor = '';
                    } else {
                        this.style.backgroundColor = '#e8f4fe';
                    }
                });
            });
            
            // Animasi saat halaman dimuat
            const elementsToAnimate = document.querySelectorAll('.info-section, table');
            elementsToAnimate.forEach((el, index) => {
                el.style.opacity = '0';
                el.style.transform = 'translateY(20px)';
                
                setTimeout(() => {
                    el.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
                    el.style.opacity = '1';
                    el.style.transform = 'translateY(0)';
                }, 100 * index);
            });
        });
    </script>
